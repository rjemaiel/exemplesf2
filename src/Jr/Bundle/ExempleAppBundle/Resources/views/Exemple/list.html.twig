<div class="list-content">
    <table class="records_list table table-border">
        <thead>
            <tr>
                <th>Name</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% if exemples is not empty and exemples is defined %}
            {% for exemple in exemples %}
                <tr>
                    <td><a href="{{ path('exemple_show', { 'id': exemple.id }) }}">{{ exemple.name }}</td>
                    <td>{{ exemple.comments }}</td>
                    <td>
                        <div class="list-inline">
                        <a href="{{ path('exemple_show', { 'id': exemple.id }) }}" class="btn btn-info"><i class="fa fa-eye"></i> Show</a>
                        <a href="{{ path('exemple_edit', { 'id': exemple.id }) }}"  class="btn btn-cta-primary col-xs-offset-1"><i class="fa fa-edit"></i> Edit</a>
                        <a id="delete" data-id="{{exemple.id}}"  class="btn btn-danger col-xs-offset-1"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
     </tbody>
    </table>    
</div>